<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5.5p %25.25c{2}| %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="CONSOLE" level="info"/>
        </Root>
        <Logger name="org.glassfish.jersey" level="error"/>
    </Loggers>
</Configuration>
